{
  "expo": {
    "name": "Memoly",
    "slug": "memoly",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "memoly",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./src/assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "icon": "./src/assets/images/icon.png",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.uki884.memoly",
      "infoPlist": {
        "NSFaceIDUsageDescription": "このアプリはFace IDを使用してアプリのロックを解除します。",
        "NSCameraUsageDescription": "写真を撮影してメモに添付するためにカメラを使用します。",
        "NSMicrophoneUsageDescription": "動画撮影時に音声を録音するためにマイクを使用します。",
        "NSPhotoLibraryUsageDescription": "写真や画像をメモに添付するためにフォトライブラリにアクセスします。"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.uki884.memoly",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "server",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-dev-client",
      "react-native-edge-to-edge",
      [
        "expo-image-picker",
        {
          "photosPermission": "写真や画像をメモに添付するためにフォトライブラリにアクセスします。"
        }
      ],
      "expo-font",
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "このアプリはFace IDを使用してアプリのロックを解除します。"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "93869c88-9890-4278-9cb6-2264b5fca190"
      }
    },
    "owner": "uki884"
  }
}
